				div(data-sr="move 34px, reset") artisitic 
				div(data-sr="move 55px, reset") chocolate enthusiast 
			#faq(ng-controller="faqCtrl")
				.faqBlock(ng-repeat="q in faq", ng-init="$last ? refresh() : null")
					div(data-sr="enter top, reset") 
						h2 {{q.q}}
						p {{q.a}}


